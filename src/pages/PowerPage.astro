---
import Power from "../components/Power.astro";

import power_card from "../data/power_card.json"

const power = power_card
---

<section class="mt-28 sm:mx-20 mx-7 h-auto relative">
  <span class="font-medium sm:text-5xl text-3xl text-[#202124]"

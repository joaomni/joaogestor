---
import letter_colors from "../data/letter_colors.json";

const gestor = letter_colors;
---

<header class="w-full text-[14px] fixed z-10 shadow-google">
	<nav class="flex h-[64px] items-center py-3 pr-3 pl-6">
		<a href="/" class="text-2xl font-normal">
			{
				gestor.map((g) => (
					<span style={"color:" + g.color}>{g.letter}</span>
				))
			}
			<span class="text-[#5f6368]">João</span>
		</a>

		<div class="flex gap-x-9 ml-9 grow h-full items-center">
			<a href="/">Serviços</a>
			<a href="/sobre-joaopaulo">Sobre</a>
			<a href="">Resumo</a>
			<a href="https://www.linkedin.com/in/joaomni/" target="_blank">Linkedin</a
			>
		</div>

		<a
			href="/"
			class="h-full border-[#dadce0] border-[1px] rounded-[4px] font-medium text-[#1a73e8] px-[27px] inline-flex items-center justify-center"
			>Entre em contato</a
		>
	</nav>
</header>

